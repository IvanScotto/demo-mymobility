<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tbd_project_project_view_form_simplified" model="ir.ui.view">
        <field name="name">Add mymob_type</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="mymob_agency" required="0"/>
                    <field name="mymob_market" required="0"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="tbd_edit_project" model="ir.ui.view">
        <field name="name">Add mymob_type</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='privacy_visibility']" position="before">
                        <field name="mymob_agency" required="0" string="Agency"/>
                        <field name="mymob_market" string="Market"/>
                        <field name="date_start"/>
                        <field name="date"/>
                </xpath>
                <xpath expr="//page[@name='settings']" position="after">
                    <page name="student" string="Student">
                        <field name="mymob_student" domain="[('mymob_partner_type', '=', 'student'), ]"
                                context="{'mymob_partner_type': 'student', 'company_type':'person'}">
                        </field>
                    </page>
                    <page name="school" string="School">
                        <field name="mymob_school" domain="[('mymob_partner_type', '=', 'school'),]"
                               context="{'mymob_partner_type': 'school', 'company_type':'company'}">
                        </field>
                    </page>
                    <page name="maps" string="Maps">
                        <field name="mymob_map" widget="gmap_widget" lat="47" lng="2"/>
                    </page>
                </xpath>
                <xpath expr="//page[@name='settings']" position="attributes">
                    <page name="maps" string="Maps">
                        <field name="mymob_map" widget="gmap_widget" lat="47" lng="2"/>
                    </page>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="widget">many2one_avatar_user</attribute>
                </xpath>

