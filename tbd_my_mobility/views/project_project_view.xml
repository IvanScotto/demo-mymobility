                <xpath expr="//field[@name='allowed_portal_user_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <record id="tbd_project_invoice_form" model="ir.ui.view">
        <field name="name">Edit view</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="hr_timesheet.project_invoice_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='allow_timesheets']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@class='o_setting_right_pane']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </data>
        </field>
